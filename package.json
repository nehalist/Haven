{
  "name": "haven",
  "version": "1.0.0",
  "description": "A Ghost theme",
  "main": "index.js",
  "scripts": {
    "gscan": "gscan .",
    "dev": "webpack --watch --mode=development",
    "build": "webpack --mode=production",
    "test": "npm run gscan && npm run sass-lint && npm run eslint",
    "sass-lint": "sass-lint assets/sass/*.scss -v -q",
    "eslint": "eslint assets/js/**",
    "zip": "bestzip Haven-$npm_package_version.zip assets/dist/* assets/images/* locales/* partials/* *.hbs LICENSE README.md screenshot.png package.json",
    "release": "npm run build && npm run zip"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nehalist/Haven.git"
  },
  "keywords": [
    "ghost",
    "ghost-theme",
    "blogging"
  ],
  "author": {
    "name": "Kevin Hirczy",
    "email": "kevin@nehalist.io",
    "url": "https://nehalist.io"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nehalist/Haven/issues"
  },
  "homepage": "https://github.com/nehalist/Haven#readme",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "babel-loader": "^8.0.4",
    "babel-plugin-prismjs": "^1.0.2",
    "bestzip": "^2.1.2",
    "browser-sync": "^2.26.3",
    "browser-sync-webpack-plugin": "^2.2.2",
    "css-loader": "^1.0.0",
    "eslint": "^5.16.0",
    "file-loader": "^2.0.0",
    "gscan": "^2.5.0",
    "mini-css-extract-plugin": "^0.4.2",
    "node-sass": "^4.11.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "sass-lint": "^1.12.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "bootstrap": "^4.1.3",
    "featherlight": "^1.7.13",
    "font-awesome": "^4.7.0",
    "jquery": "^3.3.1",
    "lunr": "^2.3.3",
    "popper.js": "^1.14.4",
    "prismjs": "^1.15.0"
  },
  "engines": {
    "ghost-api": "v2"
  },
  "config": {
    "posts_per_page": 10
  }
}
